{
  "manifest_version": 3,
  "name": "Aegis Minimal Logger",
  "version": "0.2.2",
  "description": "Minimal capture-only build: extract text and images before LLM submission.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://chat.openai.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Aegis - Logs"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["intercept_inject.js"],
      "matches": ["https://chat.openai.com/*"]
    }
  ]
}
