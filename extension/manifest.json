{
  "manifest_version": 3,
  "name": "Aegis Minimal Logger",
  "version": "0.2.0",
  "description": "Minimal capture-only build: extract text from LLM chat UI and show logs in popup (debug build).",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Aegis - Logs"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
